package es.florida.holamundo;

import java.util.Scanner;

public class HolaMundo {

	public static void main(String[] args) {
		String nombre1= args[2];
		Scanner teclado = new Scanner(System.in);
		System.out.print("Introduce tu nommbre: ");
		String nombre2 = teclado.nextLine();	
		System.out.println("Hola mundo " + nombre2);
		System.out.print("Introduce tu libro favorito ");
		String titulo = teclado.nextLine();
		Libro miLibro = new Libro(titulo);
		System.out.println(miLibro.toSString());
      }
}